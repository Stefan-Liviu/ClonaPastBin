<body>
    <div class="container" >
        <h1>Clona Past Bin</h1><br>
        <form action="/create" method="POST" >
            <label for="projectName" >Project Name:</label>
            <input type="text" class="form-control" placeholder="Project Name" name="projectName" id="projectName" style="width: 575px">
            <br><br>
            <label for="textProject">Project body:</label><br><br>
            <textarea rows="25" cols="75"  placeholder="Insert text" name="textProject" id="textProject"></textarea>
             <br><br>
             <label for="Syntax Highlighting">Syntax Highlighting:</label>
             <select name="syntaxHighlighting" id="syntaxHighlighting" >
                <option selected>Open this select menu</option>
                <option value="C++">C++</option>
                <option value="Java">Java</option>
                <option value="Python">Python</option>
                <option value="Javascript">Javascript</option>
