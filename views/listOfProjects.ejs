<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title>Clona Past Bin</title>
    <!--Nav Bar-->
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Meniu</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/post/listPosts">List of Project</a>
            </li>
          </ul>
          <form action="/post/searchPost"  class="d-flex" >
            <input class="form-control me-2"  name="search" id="search" placeholder="Search a Project" >
            <button class="btn btn-outline-success" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>

    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    
</head>

<body>

    <table class="table table-group-divider">
        <thead>
          <tr>
            <th scope="col">Project name</th>
            <th scope="col" >Project body</th>
            <th scope="col">syntaxHighlighting</th>
            <th scope="col">Date</th>
            <th scope="col">Read More</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(data => { %>
              <tr>
                  <th scope="row"><%= data.name_project %></th>
                  <td class="demo"><span><%= data.text_project %></span></td>
                  <td><%= data.syntax_highlighting %></td>
                  <td><%= data.date_project %></td>
                  <td><a href="/post/<%=data.id %>/readMore" class="btn btn-info">Read More</a></td>
                  <td><a href="/post/<%= data.id %>/edit" class="btn btn-secondary">Edit</a></td>
                  <td>
                    <a  href="/post/<%= data.id %>/delete"  class="d-inline">
                      <button type="submit" class="btn btn-danger">DELETE</button>
                  </td>
              </tr>
          <% }) %>
          </tbody>
      </table>

</body>

</html>
